{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/",
  "steps": [
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "url",
        "url": "https://github.com/davekellam/dont-mess-up-prod/archive/refs/tags/0.8.0.zip"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_ENVIRONMENT_TYPE": "production"
      }
    },
    {
      "step": "runPHP",
      "code": "<?php add_filter( 'dmup_environment_urls', function( $urls ) { return [ 'local' => 'http://example.local', 'development' => 'https://dev.example.com', 'staging' => 'https://staging.example.com', 'production' => 'https://example.com' ]; } );"
    }
  ]
}